<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package name="system" extends="struts-default">
        <action name="login" class="loginAction">
            <exception-mapping result="usernameInvalid" exception="java.lang.Exception" />
            <exception-mapping result="passwordInvalid" exception="java.lang.Exception" />
            <result name="success">/struts/loginSuceess.jsp</result>
            <result name="input">/struts/login.jsp</result>
            <result name="usernameInvalid">/struts/userNameInvalid.jsp</result>
            <result name="passwordInvalid">/struts/passwordInvalid.jsp</result>
        </action>
    </package>
</struts>